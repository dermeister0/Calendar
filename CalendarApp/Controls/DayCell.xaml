<UserControl x:Class="CalendarApp.Controls.DayCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Rectangle Stroke="{Binding BorderBrush}" />
        <TextBlock Text="{Binding Day}" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{StaticResource PhoneTextNormalStyle}" Visibility="{Binding IsTextVisible}"
                   Foreground="{Binding BorderBrush}" />
    </Grid>
</UserControl>